<UserControl x:Class="ShikuIM.UserControls.Message.JXRoomVerify"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShikuIM.UserControls.Message"
             mc:Ignorable="d" Height="auto" Margin="0 2 0 2" >
    <Grid>
        <Border x:Name="bd_main" Background="#45000000" Height="auto" MinHeight="26" CornerRadius="14" Padding="0" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
            <TextBlock x:Name="tb_prompt" MaxWidth="336" 
                       Foreground="White" TextWrapping="WrapWithOverflow" Margin="10 0,0,0" 
                       FontSize="13" TextAlignment="Center" 
                       Padding="2" VerticalAlignment="Center">
                <!--{Binding Path=prompt}  <TextBlock TextWrapping="Wrap" Text="{Binding Path=prompt}" />-->
            </TextBlock>
            <Button Width="50" Height="20" Padding="0" FontSize="13" Margin="0,0,10,0"
                Style="{StaticResource MaterialDesignFlatButton}" 
                Click="Button_Click">去确认</Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
