        <DataTemplate x:Key="MasterMember" DataType="{x:Type model:DataofMember}">
            <ListBoxItem
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                materialDesign:RippleAssist.IsDisabled="True">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="56" />
                    </Grid.ColumnDefinitions>
                    <!--<Ellipse Fill="{Binding MembersList}" />-->
                </Grid>
            </ListBoxItem>
        </DataTemplate>
        <!--  普通预览群成员样式  -->
        <DataTemplate x:Key="NormalMemberTemplate">
            <Grid
                Width="56" Height="72"
                Margin="0">
                <Border HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <!--  头像  -->
                        <Ellipse
                            x:Name="ellipse" Width="40"
                            Height="40" HorizontalAlignment="Center"
                            VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding userId, Converter={StaticResource UserIdToPathConverter}}" />
                            </Ellipse.Fill>
                        </Ellipse>
                        <!--  成员的等级  -->
                        <Image
                            Width="20" Height="20"
                            HorizontalAlignment="Right" VerticalAlignment="Bottom"
                            Panel.ZIndex="3"
                            Source="{Binding role, Converter={StaticResource GroupAccessConverter}, ConverterParameter=1}"
                            ToolTip="{Binding role, Converter={StaticResource GroupAccessConverter}}" />
                        <!--  昵称  -->
                        <TextBlock
                            Grid.Row="1" MaxWidth="56"
                            HorizontalAlignment="Center" VerticalAlignment="Center"
                            FontSize="13"
                            Text="{Binding nickname}"
                            TextTrimming="CharacterEllipsis"
                            ToolTip="{Binding nickname}" />
                    </Grid>
                </Border>
            </Grid>
        </DataTemplate>
