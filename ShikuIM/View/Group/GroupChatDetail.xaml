                                            Command="{Binding ScrollChanged}"
                                            PassEventArgsToCommand="True" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <ItemsControl
                                    HorizontalAlignment="Stretch"
                                    ItemTemplate="{StaticResource RemoveMemberTemplate}"
                                    ItemsSource="{Binding NormalMembersList}" />
                            </ScrollViewer>
                        </Grid>

                    </materialDesign:ColorZone>
                </materialDesign:TransitionerSlide>
                <!--  转让群主  -->
                <materialDesign:TransitionerSlide OpeningEffect="{materialDesign:TransitionEffect FadeIn}">
                    <materialDesign:TransitionerSlide.ForwardWipe>
                        <materialDesign:SlideWipe Direction="Left" />
                    </materialDesign:TransitionerSlide.ForwardWipe>
                    <materialDesign:TransitionerSlide.BackwardWipe>
                        <materialDesign:SlideWipe Direction="Right" />
                    </materialDesign:TransitionerSlide.BackwardWipe>
                    <materialDesign:ColorZone
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        Background="#FFF">
                        <Grid WindowChrome.IsHitTestVisibleInChrome="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="48" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <!--  返回  -->
                            <Button
                                Width="36" Height="36"
                                Margin="8,0,0,0" Padding="0"
                                HorizontalAlignment="Left" VerticalAlignment="Center"
                                Panel.ZIndex="3" materialDesign:RippleAssist.IsDisabled="True"
                                Command="{Binding GotoMainPageCommand}"
                                Content="{materialDesign:PackIcon Kind=ArrowLeft,
                                                                  Size=24}"
                                FocusVisualStyle="{StaticResource NullFocusStyle}"
                                Foreground="Gray"
                                Style="{StaticResource MaterialDesignToolForegroundButton}" />
                            <TextBlock
                                HorizontalAlignment="Center" VerticalAlignment="Center"
                                FontSize="17" Text="转让群主" />
                            <!--  转让群主  -->
                            <ScrollViewer
                                Grid.Row="1" HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch"
                                CanContentScroll="False" ScrollViewer.HorizontalScrollBarVisibility="Auto"
                                ScrollViewer.VerticalScrollBarVisibility="Auto">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="ScrollChanged">
                                        <command:EventToCommand
                                            AlwaysInvokeCommand="True"
                                            Command="{Binding ScrollChanged}"
                                            PassEventArgsToCommand="True" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                                <ItemsControl
                                    HorizontalAlignment="Stretch"
                                    ItemTemplate="{StaticResource TransferTemplate}"
                                    ItemsSource="{Binding NormalMembersList}" />
                            </ScrollViewer>
                        </Grid>

                    </materialDesign:ColorZone>
                </materialDesign:TransitionerSlide>
            </materialDesign:Transitioner>
        </Grid>
    </Border>
</Window>
